<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.OpenWeather</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.OpenWeather" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Status and navigation bar colors. -->
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.OpenWeather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OpenWeather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OpenWeather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>


